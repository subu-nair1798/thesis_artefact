pragma solidity >=0.5.0 <0.7.0;

contract Insurance {
    struct Claim {
        string incident_type;
        string collision_type;
        string incident_severity;
        string authorities_contacted;
        uint incident_hour;
        uint number_of_vehicles_involved;
        string property_damage;
        uint bodily_injuries;
        uint witnesses;
        string police_report_available;
        uint injury_claim;
        uint property_claim;
        uint vehicle_claim;
        bool complete;
        bool claim_decision;
    }
    
    struct Customer {
        uint month_as_customer;
        uint age;
        string policy_csl;
        uint policy_deductable;
        uint annual_premium;
        uint umbrella_limit;
        string sex;
        uint capital_gain;
        uint capital_loss;
    }
    
    Claim[] public claims;
    address public insurer;
    mapping(address => Customer) public customerStruct;
    
    
    modifier restricted() {
        require(msg.sender == insurer, "Only the insurer can create a claim");
        _;
    }
    
    constructor(address insurerArg, address customerAddress, uint month_as_customerArg, uint ageArg, string memory policy_cslArg, uint policy_deductableArg, uint annual_premiumArg, uint umbrella_limitArg, string memory sexArg, uint capital_gainArg, uint capital_lossArg) public {
        insurer = insurerArg;
        Customer storage customer = customerStruct[customerAddress];
        
        customer.month_as_customer = month_as_customerArg;
        customer.age = ageArg;
        customer.policy_csl = policy_cslArg;
        customer.policy_deductable = policy_deductableArg;
        customer.annual_premium = annual_premiumArg;
        customer.umbrella_limit = umbrella_limitArg;
        customer.sex = sexArg;
        customer.capital_gain = capital_gainArg;
        customer.capital_loss = capital_lossArg;
    }
}


